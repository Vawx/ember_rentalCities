{{yield}}

{{#if addNewCity}}
  <h1>New City</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="owner">Name</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="type">Attractions</label>
          {{input value=attractions id="attractions"}}
        </div>

        <button {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'cityFormShow'}}>New City</button>
{{/if}}
